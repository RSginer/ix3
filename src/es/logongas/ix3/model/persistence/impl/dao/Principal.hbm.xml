<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="es.logongas.ix3.model.Principal" >
        <id name="sid" >
            <generator class="identity" />
        </id>
        <natural-id>
            <property name="login"  />
        </natural-id>
        <property name="name"  />

        <list name="acl"  cascade="all" inverse="true" >
            <key>
                <column name="sid"  />
            </key>
            <list-index>
                <column name="Idx"  />
            </list-index>
            <one-to-many class="es.logongas.ix3.model.ACE" />
        </list>
        <list name="groups"  cascade="all" inverse="true"  >
            <key>
                <column name="sid"  />
            </key>
            <list-index>
                <column name="Idx"  />
            </list-index>
            <one-to-many class="es.logongas.ix3.model.Group" />
        </list>

        <joined-subclass name="es.logongas.ix3.model.User" table="userr" extends="es.logongas.ix3.model.Principal" >
            <key column="sid" />
        </joined-subclass>
        <joined-subclass name="es.logongas.ix3.model.Group" table="groupp" extends="es.logongas.ix3.model.Principal" >
            <key column="sid" />
        </joined-subclass>



    </class>
</hibernate-mapping>