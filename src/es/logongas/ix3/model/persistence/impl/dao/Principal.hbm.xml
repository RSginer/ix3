<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="es.logongas.ix3.model.Principal" >
        <id name="sid" >
            <generator class="identity" />
        </id>
        <natural-id>
            <property name="login"  />
        </natural-id>
        <property name="name"  />

        <set name="acl"  cascade="all" inverse="false" order-by="priority" >
            <key>
                <column name="sid"  />
            </key>
            <one-to-many class="es.logongas.ix3.model.ACE" />
        </set>
        <set name="memberOf"  cascade="save-update,evict,lock,merge,refresh,replicate" inverse="true" order-by="priority" >
            <key>
                <column name="sid"  />
            </key>
            <one-to-many class="es.logongas.ix3.model.GroupMember" />
        </set>

        <joined-subclass name="es.logongas.ix3.model.User" table="userr" extends="es.logongas.ix3.model.Principal" >
            <key column="sid" />
            <property name="aceType" >
                <type name="org.hibernate.type.EnumType">
                    <param name="enumClass">es.logongas.ix3.model.UserType</param>
                    <param name="type">12</param>
                </type>
            </property>
        </joined-subclass>
        <joined-subclass name="es.logongas.ix3.model.Group" table="groupp" extends="es.logongas.ix3.model.Principal" >
            <key column="sid" />
            <set name="groupMembers"  cascade="save-update,evict,lock,merge,refresh,replicate" inverse="true"  >
                <key>
                    <column name="sid"  />
                </key>
                <one-to-many class="es.logongas.ix3.model.GroupMember" />
            </set>
        </joined-subclass>



    </class>
</hibernate-mapping>